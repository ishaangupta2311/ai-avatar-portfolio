// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  bio             String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  resume          Resume?   // One-to-one relation
  avatar          Avatar?   // One-to-one relation
  useDefaultAvatar Boolean  @default(true)
}

model Resume {
  id            String    @id @default(cuid())
  fileName      String    
  fileUrl       String    
  fileType      FileType  
  fileSize      Int      
  uploadedAt    DateTime  @default(now())
  userId        String    @unique  // Makes it one-to-one
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Avatar {
id String @id @default(cuid())   
// If a custom avatar isnâ€™t uploaded, this field defaults to "Man.glb".
fileName String @default("Man.glb")
// For custom avatars you would likely update fileUrl and fileSize.
fileUrl String
fileSize Int
uploadedAt DateTime @default(now())
userId String @unique
user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


enum FileType {
  PDF
  DOCX
}